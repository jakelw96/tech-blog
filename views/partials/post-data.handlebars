<div class="container">
    <div class="row">
        <article class="col-12 post-box">
            <div class="title">
                <div class="row">
                    <h2 class="title-text col-6">{{title}}</h2>
                    <h4 class="posted col-6">Posted by {{user.username}} on {{format_date created_at}}</h4>
                </div>
            </div>         
            <div class="content">
                <p>{{contents}}</p>
                |
                <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
        </article>
    </div>
</div> 